<div class="comment">
  <p class="comment-content"><%= comment.context %></p>
  <p class="comment-posted-by">By: <%= comment.user.email %> <%= time_ago_in_words(comment.created_at) %> ago </p>

  <div class="links">
    <% if comment.user_id == current_user.id %>
      <%= link_to "Редактировать", edit_message_comment_path(comment.message, comment) %>
      <%= link_to "Удалить", message_comment_path(comment.message, comment), method: :delete, data: { confirm: "Вы уверены?" } %>
    <% end %>  
  </div>
</div>