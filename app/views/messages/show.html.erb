<div class="col-md-10  col-md-offset-1">
  <div class="message-show">
    <h2><%= @message.title %></h2>
    <p class="message-posted-by"><%= time_ago_in_words(@message.created_at) %> ago</p>
    <p class="message-desc"><%= @message.description %></p>

    <h3 class="comment-section-header">Комментарии:</h3>
    <p><%= render @message.comments %></p>

    <h3 class="reply-to-msg">Написать:</h3>
    <%= render 'comments/form' %>

    <div class="links btn-group">
      <%= link_to "Назад", root_path, class: "btn btn-primary" %>
      <%= link_to "Редактировать", edit_message_path(@message), class: "btn btn-warning" %>
      <%= link_to "Удалить", message_path(@message), method: :delete, data: { confirm: "Вы уверены?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
